<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
            android:text="@string/test_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_wifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_bluetooth"/>
    <Button
            android:text="@string/test_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_bluetooth"
            app:layout_constraintTop_toBottomOf="@id/button_wifi"
            app:layout_constraintBottom_toTopOf="@id/button_bluetooth_le"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:text="@string/test_bluetooth_le"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_bluetooth_le"
        app:layout_constraintTop_toBottomOf="@id/button_bluetooth"
        app:layout_constraintBottom_toTopOf="@id/button_nfc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:text="@string/test_nfc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_nfc"
        app:layout_constraintTop_toBottomOf="@id/button_bluetooth_le"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>